# Perry Chick Environment Variables
# Copy this to .env.local and customize with your actual values

# Database Configuration
POSTGRES_USER=perrychick
POSTGRES_PASSWORD=db_password_change_me
POSTGRES_DB=perrychick_db
DATABASE_URL=Host=localhost;Database=perrychick_db;Username=perrychick;Password=db_password_change_me

# Keycloak Authentication
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_password_change_me
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=perrychick
KEYCLOAK_CLIENT_ID=perrychick-frontend
KEYCLOAK_CLIENT_SECRET=your_client_secret_here
KEYCLOAK_DB_PASSWORD=db_password_change_me

# Redis Configuration
REDIS_URL=localhost:6379
REDIS_PASSWORD=redis_password_change_me

# SendGrid Configuration (for email notifications)+
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@perrychick.com

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_change_me

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5006
NOTIFICATIONS_URL=http://localhost:5003

# Strapi CMS
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here
STRAPI_JWT_SECRET=strapi_jwt_secret_change_me
STRAPI_ADMIN_JWT_SECRET=strapi_admin_jwt_secret_change_me
STRAPI_APP_KEYS=strapi_app_keys_change_me
STRAPI_API_TOKEN_SALT=strapi_api_token_salt_change_me

# Monitoring URLs
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
JAEGER_URL=http://localhost:16686

# Docker Configuration
DOCKER_REGISTRY=yourusername
IMAGE_TAG=latest

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=perrychick
OTEL_RESOURCE_ATTRIBUTES=service.name=perrychick,service.version=1.0.0

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:5006/api
